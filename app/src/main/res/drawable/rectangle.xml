<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#575150" />
            <gradient android:angle="-90" android:startColor="#77D1E7" android:endColor="#242222"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#101110" />
            <solid android:color="#0F0F0F"/>
        </shape>
    </item>


    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77D1E7" />
            <gradient android:angle="-90" android:startColor="#77D1E7" android:endColor="#9CFCFC" />
        </shape>
    </item>


</selector>